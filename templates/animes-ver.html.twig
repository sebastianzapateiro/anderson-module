<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">


{% for item in data %}

	<img id='portada' src="{{ item.portada }}" class="w-100 d-none d-md-block" alt="{{ item.nombre }}">
	<div class="container">
		<div class="row">

			<div class="col-md-4 col-lg-3 ">
				<img id='cover' src="{{ item.cover }}" class="img-fluid rounded-4" alt="{{ item.nombre }}">
			</div>
			<div class="col">
				<div class="py-3 px-3 px-md-0">
					<h5 class="card-title">{{ item.nombre }}</h5>
					<p class="card-text">{{ item.descripcion }}</p>
				</div>
			</div>

		</div>
	</div>


{% endfor %}


<style>

	img#cover {
		transform: translateY(-40px);
		box-shadow: rgb(50 50 93 / 25%) 0 2px 5px -1px, rgb(0 0 0 / 30%) 0 1px 3px -1px;
	}

	@media(max-width: 576px) {

		img#cover {
			transform: translateY(0px);
			box-shadow: rgb(50 50 93 / 25%) 0 2px 5px -1px, rgb(0 0 0 / 30%) 0 1px 3px -1px;
		}

	}

	img#portada {
		height: 200px;
		object-fit: cover;
		border-radius: 16px;
	}
</style>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
