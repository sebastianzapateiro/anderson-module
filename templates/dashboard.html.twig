<section class="my-3 px-3">
  <div class="col-10 p-3 bg-white rounded-5">
    <div class="list-group list-group-flush w-auto">
      {% for cliente in clientes %}


        <a href="/node/{{ cliente.id }}" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
          <i class="bi bi-people fs-3"></i>
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6 class="mb-0">{{ cliente.title.value }}</h6>
              <p class="mb-0 opacity-75">{{ cliente.body.value |striptags }}</p>
            </div>
            <small class="opacity-50 text-nowrap">{{ cliente.changed.value |date("m/d/Y")}}</small>
          </div>
        </a>

      {% endfor %}



    </div>
  </div>
</section>

