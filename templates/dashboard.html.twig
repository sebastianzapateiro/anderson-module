<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">


<div class="container ">

	<div
		class="row">

		{#    profile#}
		<div class="col-md-4 col-lg-3">
			<div class="bg-white rounded-5 p-3">
				<i class="bi bi-person fs-1"></i>
				<a href="/perfil">
					<h6 class="small">Visitar mi perfil</h6>
				</a>

			</div>
		</div>

		{#    second section #}
		<div
			class="col">

			{#      buttoms #}
			<div class="row g-3">

				<div class="col-6 col-md-4 col-lg-2">
					<div class="bg-white rounded-5 p-3">
						<div class="d-flex">
							<i class="bi bi-people fs-1"></i>
							<a class="ms-auto use-ajax " data-dialog-type="modal" href="/node/add/cliente" data-dialog-options='{"width":"80%"}'>
								<i class=" bi bi-plus fs-1"></i>
							</a>
						</div>
						<h3 class="fw-bold fs-2">{{clientes|length }}</h3>
						<a href="/clientes">
							<h6 class="small">Clientes</h6>
						</a>
					</div>
				</div>
				<div class="col-6 col-md-4 col-lg-2">
					<div class="bg-white rounded-5 p-3">
						<div class="d-flex">
							<i class="bi bi-wrench-adjustable-circle fs-1"></i>
							<i class="ms-auto bi bi-plus fs-1"></i>
						</div>
						<h3 class="fw-bold fs-2">12</h3>
						<a href="/servicios">
							<h6 class="small">Servicios</h6>
						</a>
					</div>
				</div>
				<div class="col-6 col-md-4 col-lg-2">
					<div class="bg-white rounded-5 p-3">
						<i class="bi bi-cash-stack fs-1"></i>
						<h3 class="fw-bold fs-2">12</h3>
						<h6 class="small">Servicios pendientes</h6>
					</div>
				</div>

			</div>

			{#      Clients table#}

			<div class="col-md-10 p-3 bg-white rounded-5">
				<div class="list-group list-group-flush w-auto">
					{% for cliente in clientes %}


						<a href="/node/{{ cliente.id }}" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
							<i class="bi bi-person fs-3" style='color: white;
																								    background: black;
																								    padding: 4px;
																								    border-radius: 10%;'></i>
							<div class="d-flex gap-2 w-100 justify-content-between">
								<div>
									<h6 class="mb-0">{{ cliente.title.value }}</h6>
									<p class="mb-0 opacity-75">{{ cliente.field_correo.value |striptags }}</p>
								</div>
								<small class="opacity-50 text-nowrap">{{ cliente.changed.value |date("m/d/Y")}}</small>
							</div>
						</a>

					{% endfor %}


				</div>

				{{ paginador }}
			</div>
		</div>

	</div>


</div>
