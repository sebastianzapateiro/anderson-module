<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">


{% if data %}

	<div class="py-5 row gx-3">

		<div class="col-md-4">
			<div class="p-3 rouded-5 bg-light border">




				{% for key, item in data %}

				<h4>{{ item.nombre }}</h4>
				<p>Los datos relacionados con el registro</p>
					<ul>
						<li>ID:
							{{ item.id }}</li>
						<li>Nombre:
							{{ item.nombre }}</li>
					</ul>


					<a class='button--secondary button' href='/nombres'>Regresar</a>
					<a class="button--primary button" href="/nombres/{{ item.id }}/editar">
						Editar
					</a>


				{% endfor %}
			</div>
		</div>


		<div class="col">

			<h4>Servicios registrados</h4>
			{% if not table['#rows'] %}
				<p>Actualmente este registro no tiene servicios asociados.</p>
			{% endif %}
			<!-- Button trigger modal -->
			<button type="button" class="btn btn-primary float-end mb-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
				Agregar un servicio
			</button>

			{% if table['#rows'] %}
				{{ table }}
			{% endif %}


			<!-- Modal -->
			<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<h1 class="modal-title fs-5" id="exampleModalLabel">Agregar un servicio</h1>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div class="modal-body">
							{{ form }}
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
								{# <button type="button" class="btn btn-primary">Save changes</button> #}
							</div>
						</div>
					</div>
				</div>


			</div>


		</div>
	</div>

{% else %}


	<div class="alert alert-danger" role="alert">
		No hay registros asociados para esta consulta
	</div>


{% endif %}


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
